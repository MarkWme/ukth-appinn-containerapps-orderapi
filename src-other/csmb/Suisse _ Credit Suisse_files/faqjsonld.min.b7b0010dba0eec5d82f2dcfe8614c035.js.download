document.addEventListener('DOMContentLoaded', function () {
		const accordions = document.getElementsByClassName('m-accordion-extended--faq');
		if (accordions.length > 0) {
			const questionsAndAnswers = [];
			const accordionItems = document.querySelectorAll('li.m-accordion__item');
			for (element of accordionItems) {
				const question = element.querySelector('.m-accordion__item-title');
				const answer = element.querySelector('.m-accordion__faq-answer > section > div');
				if (question && answer) {
					questionsAndAnswers.push({
						"@type": "Question",
						"name": question.innerHTML,
						"acceptedAnswer": {
							"@type": "Answer",
							"text": answer.innerHTML.replace(/(<(pre|script|style|textarea)[^]+?<\/\2)|(^|>)\s+|\s+(?=<|$)/g, "$1$3")
						}
					});
				}
			}
			if (questionsAndAnswers.length > 0) {
				const jsonLdObject =
					{
						"@context": "https://schema.org",
						"@type": "FAQPage",
						"mainEntity": questionsAndAnswers
					};
				const el = document.createElement('script');
				el.type = 'application/ld+json';
				el.text = JSON.stringify(jsonLdObject);
				document.querySelector('head').appendChild(el);
			}
		}
	}, false
);
